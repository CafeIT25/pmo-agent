# API Settings
API_V1_STR="/api/v1"
PROJECT_NAME="PMO Agent"
VERSION="1.0.0"

# Security
SECRET_KEY="your-secret-key-here"
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database (Choose one)
# For SQLite (Development - No setup required)
DATABASE_URL=sqlite:///./pmo_agent.db

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pmo_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pmo_agent
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379

# Email SMTP Settings
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME="PMO Agent"

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth - Microsoft (For Outlook integration)
OUTLOOK_ENABLED=true
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback/microsoft
MICROSOFT_SCOPES=User.Read Mail.Read Mail.ReadWrite offline_access

# Graph API Settings
GRAPH_API_BASE_URL=https://graph.microsoft.com/v1.0
GRAPH_API_TIMEOUT=30
OUTLOOK_BATCH_SIZE=20

# OpenAI API Settings (Required for AI features)
USE_OPENAI=true
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-5-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3
OPENAI_VERBOSITY=low
OPENAI_REASONING_EFFORT=low

# AWS Bedrock (Alternative AI provider)
USE_BEDROCK=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Frontend
FRONTEND_URL=http://localhost:3000

# Application Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FILE=pmo_agent.log

# AI Settings
USE_MOCK_AI=false
AI_BATCH_SIZE=10
AI_TIMEOUT_SECONDS=30

# Cost Optimization Settings
OPENAI_COST_TRACKING=true
OPENAI_DAILY_LIMIT_USD=10.00
OPENAI_MONTHLY_LIMIT_USD=100.00

# Cache Settings (Choose one)
USE_MEMORY_CACHE=true
USE_REDIS_CACHE=false
CACHE_TTL=3600

# Background Tasks
USE_CELERY=false
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173